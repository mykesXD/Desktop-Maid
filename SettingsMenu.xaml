<Window x:Class="Maid.SettingsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maid"
        mc:Ignorable="d"
        Title="SettingsMenu" Height="400" Width="500"
        WindowStartupLocation="Manual" 
        Left="700" Top="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        >

    <Canvas Background="#FFF3E1C5" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">

        <Rectangle Width="40" Height="40" Canvas.Left="455" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown" Canvas.Top="5">
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/x_icon.png"/>
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>

</Window>
